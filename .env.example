# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Screen Capture Settings
SCREEN_FPS=30
SCREEN_QUALITY=70
SCREEN_FORMAT=JPEG

# Control Mode
CONTROL_MODE=desktop  # desktop or appium

# Screen Region (for desktop mode)
# REGION_X=0
# REGION_Y=0
# REGION_WIDTH=1920
# REGION_HEIGHT=1080

# Goal Automation
GOAL_ENABLED=false
GOAL_TEXT=
GOAL_MAX_STEPS=50

# Security
ENABLE_AUTH=false
AUTH_TOKEN=your-secret-token-here

# WebSocket Settings
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/server.log

# OpenAI API (for UI-TARS features)
# OPENAI_API_KEY=your-openai-api-key-here
# UITARS_MODEL=gpt-4o
# UITARS_MOCK_MODE=false
